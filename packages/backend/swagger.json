        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Game ID"
          },
          {
            "name": "tileId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Tile ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Tile completion status updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": ["completed", "incomplete"],
                      "description": "New completion status"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "User must be part of a team",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
