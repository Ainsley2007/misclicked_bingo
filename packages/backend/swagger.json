          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "User ID to remove"
          }
        ],
        "responses": {
          "200": {
            "description": "Member removed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Member removed successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Captain cannot remove themselves",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "Only team captain can remove members",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Team not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Failed to remove team member",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/bosses": {
      "get": {
        "tags": ["Bosses"],
        "summary": "Get all bosses",
        "description": "Returns a list of all bosses with their unique items",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of bosses",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Boss"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Failed to fetch bosses",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/admin/bosses": {
      "post": {
        "tags": ["Admin"],
        "summary": "Create a new boss",
        "description": "Creates a new boss with unique items (admin only)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateBossRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Boss created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Boss"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - Admin access required",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Failed to create boss",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/admin/promote/{userId}": {
      "post": {
        "tags": ["Admin"],
        "summary": "Promote user to admin",
        "description": "Promotes a user to admin role (admin only)",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "User ID to promote"
          }
        ],
        "responses": {
          "200": {
            "description": "User promoted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User promoted to admin"
                    },
                    "userId": {
                      "type": "string"
                    },
                    "username": {
                      "type": "string",
                      "nullable": true
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Failed to promote user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "auth_token",
        "description": "HttpOnly cookie containing JWT token. Set automatically after Discord OAuth login."
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Error message"
          }
        },
        "required": ["error"]
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "User ID"
          },
          "discordId": {
            "type": "string",
            "description": "Discord user ID"
          },
          "globalName": {
            "type": "string",
            "nullable": true,
            "description": "Discord global name"
          },
          "username": {
            "type": "string",
            "nullable": true,
            "description": "Discord username"
          },
          "email": {
            "type": "string",
            "nullable": true,
            "description": "User email"
          },
          "avatar": {
            "type": "string",
            "nullable": true,
            "description": "Discord avatar hash"
          },
          "role": {
            "type": "string",
            "enum": ["user", "captain", "admin"],
            "description": "User role"
          },
          "teamId": {
            "type": "string",
            "nullable": true,
            "format": "uuid",
            "description": "Team ID the user belongs to"
          },
          "gameId": {
            "type": "string",
            "nullable": true,
            "format": "uuid",
            "description": "Game ID the user is in"
          }
        },
        "required": ["id", "discordId", "role"]
      },
      "Game": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Game ID"
          },
          "code": {
            "type": "string",
            "pattern": "^[A-Z0-9]{6}$",
            "description": "6-character game code"
          },
          "name": {
            "type": "string",
            "description": "Game name"
          },
          "teamSize": {
            "type": "integer",
            "minimum": 1,
            "maximum": 50,
            "default": 5,
            "description": "Maximum team size"
          },
          "boardSize": {
            "type": "integer",
            "enum": [2, 3, 4, 5],
            "default": 3,
            "description": "Bingo board size (NxN)"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Game creation timestamp"
          }
        },
        "required": ["id", "code", "name", "teamSize", "boardSize", "createdAt"]
      },
      "CreateGameRequest": {
        "type": "object",
        "required": ["name", "tiles"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Game name"
          },
          "teamSize": {
            "type": "integer",
            "minimum": 1,
            "maximum": 50,
            "default": 5,
            "description": "Maximum team size"
          },
          "boardSize": {
            "type": "integer",
            "enum": [2, 3, 4, 5],
            "default": 3,
            "description": "Bingo board size (NxN). Must match number of tiles."
          },
          "tiles": {
            "type": "array",
            "description": "Array of tiles. Must have exactly boardSize * boardSize tiles.",
            "items": {
              "$ref": "#/components/schemas/CreateTileRequest"
            }
          }
        }
      },
      "CreateTileRequest": {
        "type": "object",
        "required": ["bossId"],
        "properties": {
          "bossId": {
            "type": "string",
            "description": "Boss ID"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "description": "Optional tile description"
          },
          "isAnyUnique": {
            "type": "boolean",
            "default": false,
            "description": "If true, any unique item from the boss counts"
          },
          "isOrLogic": {
            "type": "boolean",
            "default": false,
            "description": "If true, any of the unique items counts (OR logic)"
          },
          "anyNCount": {
            "type": "integer",
            "nullable": true,
            "description": "If isAnyUnique is true, number of unique items required"
          },
          "uniqueItems": {
            "type": "array",
            "description": "Required if isAnyUnique is false. List of unique items for this tile.",
            "items": {
              "$ref": "#/components/schemas/UniqueItemRequest"
            }
          }
        }
      },
      "UniqueItemRequest": {
        "type": "object",
        "required": ["itemName"],
        "properties": {
          "itemName": {
            "type": "string",
            "description": "Name of the unique item"
          },
          "requiredCount": {
            "type": "integer",
            "minimum": 1,
            "default": 1,
            "description": "Number of this item required"
          }
        }
      },
      "BingoTile": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Tile ID"
          },
          "gameId": {
            "type": "string",
            "format": "uuid",
            "description": "Game ID"
          },
          "bossId": {
            "type": "string",
            "description": "Boss ID"
          },
          "bossName": {
            "type": "string",
            "nullable": true,
            "description": "Boss name"
          },
          "bossType": {
            "type": "string",
            "nullable": true,
            "description": "Boss type"
          },
          "bossIconUrl": {
            "type": "string",
            "nullable": true,
            "description": "Boss icon URL"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "description": "Tile description"
          },
          "position": {
            "type": "integer",
            "description": "Position on the board (0-indexed)"
          },
          "isAnyUnique": {
            "type": "boolean",
            "description": "If true, any unique item from the boss counts"
          },
          "isOrLogic": {
            "type": "boolean",
            "description": "If true, any of the unique items counts (OR logic)"
          },
          "anyNCount": {
            "type": "integer",
            "nullable": true,
            "description": "If isAnyUnique is true, number of unique items required"
          },
          "isCompleted": {
            "type": "boolean",
            "description": "Whether the tile is completed for the user's team"
          },
          "uniqueItems": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UniqueItem"
            },
            "description": "List of unique items for this tile"
          }
        },
        "required": ["id", "gameId", "bossId", "position", "isAnyUnique", "isOrLogic", "isCompleted", "uniqueItems"]
      },
      "UniqueItem": {
        "type": "object",
        "properties": {
          "itemName": {
            "type": "string",
            "description": "Name of the unique item"
          },
          "requiredCount": {
            "type": "integer",
            "description": "Number of this item required"
          }
        },
        "required": ["itemName", "requiredCount"]
      },
      "Team": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Team ID"
          },
          "gameId": {
            "type": "string",
            "format": "uuid",
            "description": "Game ID"
          },
          "name": {
            "type": "string",
            "description": "Team name"
          },
          "captainUserId": {
            "type": "string",
            "format": "uuid",
            "description": "Team captain user ID"
          }
        },
        "required": ["id", "gameId", "name", "captainUserId"]
      },
      "GameOverview": {
        "type": "object",
        "properties": {
          "game": {
            "$ref": "#/components/schemas/Game"
          },
          "tiles": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/BingoTile"
            },
            "description": "All tiles in the game (without isCompleted field)"
          },
          "teams": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TeamWithBoardStates"
            },
            "description": "All teams in the game with their board completion states"
          }
        },
        "required": ["game", "tiles", "teams"]
      },
      "TeamWithBoardStates": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Team ID"
          },
          "name": {
            "type": "string",
            "description": "Team name"
          },
          "gameId": {
            "type": "string",
            "format": "uuid",
            "description": "Game ID"
          },
          "captainUserId": {
            "type": "string",
            "format": "uuid",
            "description": "Team captain user ID"
          },
          "boardStates": {
            "type": "object",
            "additionalProperties": {
              "type": "string",
              "enum": ["completed", "incomplete"]
            },
            "description": "Map of tile ID to completion status"
          }
        },
        "required": ["id", "name", "gameId", "captainUserId", "boardStates"]
      },
      "Boss": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Boss ID"
          },
          "name": {
            "type": "string",
            "description": "Boss name"
          },
          "type": {
            "type": "string",
            "description": "Boss type"
          },
          "iconUrl": {
            "type": "string",
            "description": "Boss icon URL"
          },
          "uniqueItems": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of unique item names for this boss"
          }
        },
        "required": ["id", "name", "type", "iconUrl", "uniqueItems"]
      },
      "CreateBossRequest": {
        "type": "object",
        "required": ["name", "type", "iconUrl", "uniqueItems"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Boss name"
          },
          "type": {
            "type": "string",
            "description": "Boss type"
          },
          "iconUrl": {
            "type": "string",
            "description": "Boss icon URL"
          },
          "uniqueItems": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            },
            "description": "List of unique item names (at least one required)"
          }
        }
      }
    }
  }
}


