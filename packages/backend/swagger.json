{
  "openapi": "3.0.3",
  "info": {
    "title": "Misclicked Bingo API",
    "description": "Backend API for the Misclicked Bingo application with Discord OAuth2 authentication",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local development server"
    },
    {
      "url": "https://osrs-bingo.globeapp.dev",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "Authentication",
      "description": "Discord OAuth2 authentication endpoints"
    },
    {
      "name": "Users",
      "description": "User management endpoints"
    },
    {
      "name": "Games",
      "description": "Game management endpoints"
    },
    {
      "name": "Teams",
      "description": "Team management endpoints"
    },
    {
      "name": "Bosses",
      "description": "Boss data endpoints"
    },
    {
      "name": "Admin",
      "description": "Admin-only endpoints"
    }
  ],
  "paths": {
    "/auth/discord/login": {
      "get": {
        "tags": ["Authentication"],
        "summary": "Initiate Discord OAuth login",
        "description": "Redirects to Discord OAuth2 authorization page",
        "responses": {
          "302": {
            "description": "Redirect to Discord OAuth",
            "headers": {
              "Location": {
                "schema": {
                  "type": "string"
                },
                "description": "Discord OAuth authorization URL"
              }
            }
          },
          "500": {
            "description": "Discord OAuth not configured",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/discord/callback": {
      "get": {
        "tags": ["Authentication"],
        "summary": "Discord OAuth callback",
        "description": "Handles Discord OAuth callback and sets authentication cookie",
        "parameters": [
          {
            "name": "code",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Authorization code from Discord"
          }
        ],
        "responses": {
          "302": {
            "description": "Redirect to frontend with auth cookie set",
            "headers": {
              "Location": {
                "schema": {
                  "type": "string"
                },
                "description": "Frontend URL"
              },
              "Set-Cookie": {
                "schema": {
                  "type": "string"
                },
                "description": "HttpOnly auth_token cookie"
              }
            }
          },
          "400": {
            "description": "Missing authorization code",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Authentication failed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "get": {
        "tags": ["Authentication"],
        "summary": "Logout user",
        "description": "Clears authentication cookie",
        "responses": {
          "200": {
            "description": "Logged out successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Logged out successfully"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/me": {
      "get": {
        "tags": ["Users"],
        "summary": "Get current user",
        "description": "Returns the authenticated user's information",
        "security": [
          {
            "cookieAuth": []
